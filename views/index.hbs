
<div class="homeSearchBox">
  <form
    class="homePageForm"
    action="/products"
    method="get"
    id="product-search"
  >
    <input
      class="inputHomePage"
      type="search"
      name="productType"
      id="productType"
      placeholder="e.g eyeliner"
    />
    <input class="inputHomePage" type="search" name="brand" id="brand" placeholder="By brand" />
    <input class="inputHomePage" type="search" name="price" id="price" placeholder="Price" />
    <input  class="productSearchButton" type="submit" value="search" />
  </form>
</div>

<div class="homePagePhoto">
  <img class="mainPicHome" src="../images/coverpic.jpg" alt="">
</div>

<div class="productHomePage">
  <ul class="containerProduct">
    {{#each products}}
      <li><img class="productImage" src="{{imageUrl}}" alt="{{name}}" />
        {{name}}
        by
        <h3>{{brand}}</h3>
        <h6>{{price}}â‚¬</h6>
        <button class="productButton" value="{{_id}}" id="fav"> Fav </button>
        <button class="productButton"><a href="/product-detail">See more</a>
        </button></li>
    {{/each}}
  </ul>
</div>

