<form action="/products" method="get" id="product-search">
  <input
    type="search"
    name="productType"
    id="productType"
    placeholder="search for item"
  />
  <input type="search" name="brand" id="brand" placeholder="By brand" />
  <input type="search" name="price" id="price" placeholder="Price" />
  <input type="submit" value="search" />
</form>

<div class="productHomePage">
  <ul class="container">
    {{#each products}}
      <li><img class="productImage" src="{{imageUrl}}" alt="{{name}}" />
        {{name}}
        by
        {{brand}}
        $CAD{{price}}
        <button value="{{_id}}"> Fav </button><button> See more </button></li>
    {{/each}}
  </ul>
</div>

